<configuration plugin="bothandler">
   <settings name="commands">
        <!-- Specify what admin level can use the commands here -->       
        <set name="kickbots-kb">20</set>
        <set name="addbots-ab">20</set>
   </settings>
   <settings name="settings">
        <!-- How many bots to add? (default: 4)-->
        <set name="bot_minplayers">4</set>
    </settings>
    <settings name="more_bots">
        <!-- Define the extra bots.
        Use: <name> <level> <team> <ping> <alias>  (examples already given, just edit)
        See readme for more information -->
        <set name="bot1">python 5 blue 110 DimpleMaker</set>
        <set name="bot2">boa 5 red 110 PimplePopper</set>
    </settings>
    <!-- Follow the example an list all the bots you would like to add.
    Simply add more entries following the layout if needed.
	 TIP: Leave the team set to "free" to have B3 send the bot to the team with less players -->
    <bots>
        <bot>
            <name>Superdupont</name>
            <character>python</character>
            <skill>5</skill>
            <team>free</team>
            <ping>40</ping>
        </bot>
        <bot>
            <name>Golem</name>
            <character>boa</character>
            <skill>5</skill>
            <team>free</team>
            <ping>0</ping>
        </bot>
        <bot>
            <name>Devilman</name>
            <character>puma</character>
            <skill>5</skill>
            <team>free</team>
            <ping>0</ping>
        </bot>
        <bot>
            <name>ElMatador</name>
            <character>python</character>
            <skill>5</skill>
            <team>free</team>
            <ping>50</ping>
        </bot>
    </bots>
</configuration>

